generator clent {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model hashtags {
  id        Int      @id @default(autoincrement())
  tagName   String
  isSelf    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model medias {
  id        Int      @id @default(autoincrement())
  type      String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  tweetId   String
}

model schema_migrations {
  version BigInt  @id
  dirty   Boolean
}

model tweets {
  tweetId      String   @id
  text         String?  @db.VarChar(4096)
  retweetCount Int
  likeCount    Int
  authorId     String
  tweetUrl     String
  tweetedAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
  hashtagId    Int
}

model vtubers {
  id         Int      @id @default(autoincrement())
  familyName String?
  givenName  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  hashtagId  Int
}
