generator clent {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model hashtags {
  id         Int      @id @default(autoincrement())
  name       String
  is_self    Boolean  @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  vtuber_id  Int
}

model schema_migrations {
  version BigInt  @id
  dirty   Boolean
}

model vtubers {
  id              Int      @id @default(autoincrement())
  name            String
  belongs_to      String?
  profile_image   String
  twitter_user_id String
  channel         String
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now())
  hashtag_id      String
}

model media_objects {
  type       String
  url        String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  tweet_id   String

  @@id([tweet_id, url])
}

model tweet_objects {
  tweet_id      String   @id
  text          String?  @db.VarChar(4096)
  retweet_count Int
  like_count    Int
  author_id     String
  tweet_url     String
  tweeted_at    DateTime
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now())
  hashtag_id    Int
}
